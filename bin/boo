#!/usr/bin/env bash
#
#    ▄▄▄▄    ▒█████   ▒█████
#    ▓█████▄ ▒██▒  ██▒▒██▒  ██▒
#    ▒██▒ ▄██▒██░  ██▒▒██░  ██▒
#    ▒██░█▀  ▒██   ██░▒██   ██░
#    ░▓█  ▀█▓░ ████▓▒░░ ████▓▒░
#    ░▒▓███▀▒░ ▒░▒░▒░ ░ ▒░▒░▒░
#    ▒░▒   ░   ░ ▒ ▒░   ░ ▒ ▒░
#     ░    ░ ░ ░ ░ ▒  ░ ░ ░ ▒
#     ░          ░ ░      ░ ░
#          ░
# Boo color script
# @benjifs
#
# See also: curl -L git.io/BOO

f=3 b=4
for j in f b; do
  for i in {0..7}; do
    printf -v $j$i %b "\e[${!j}${i}m"
  done
done
bld=$'\e[1m'
rst=$'\e[0m'
inv=$'\e[7m'

cat << BOO
${rst}
${f1}    ▄▀▀▀▀▀▀▀▄    ${f2}    ▄▀▀▀▀▀▀▀▄    ${f3}    ▄▀▀▀▀▀▀▀▄    ${f4}    ▄▀▀▀▀▀▀▀▄    ${f5}    ▄▀▀▀▀▀▀▀▄    ${f6}    ▄▀▀▀▀▀▀▀▄
${f1}  ▄▀ █ █   ▄▄▀▄  ${f2}  ▄▀ █ █   ▄▄▀▄  ${f3}  ▄▀ █ █   ▄▄▀▄  ${f4}  ▄▀ █ █   ▄▄▀▄  ${f5}  ▄▀ █ █   ▄▄▀▄  ${f6}  ▄▀ █ █   ▄▄▀▄
${f1}  █ ▄ ▄ ▄   ▀ █  ${f2}  █ ▄ ▄ ▄   ▀ █  ${f3}  █ ▄ ▄ ▄   ▀ █  ${f4}  █ ▄ ▄ ▄   ▀ █  ${f5}  █ ▄ ▄ ▄   ▀ █  ${f6}  █ ▄ ▄ ▄   ▀ █
${f1}  ▀▄ ▀ ▀ ▀    ▄▀ ${f2}  ▀▄ ▀ ▀ ▀    ▄▀ ${f3}  ▀▄ ▀ ▀ ▀    ▄▀ ${f4}  ▀▄ ▀ ▀ ▀    ▄▀ ${f5}  ▀▄ ▀ ▀ ▀    ▄▀ ${f6}  ▀▄ ▀ ▀ ▀    ▄▀
${f1}    ▀▄▄▄▄▄▄▄▄▀   ${f2}    ▀▄▄▄▄▄▄▄▄▀   ${f3}    ▀▄▄▄▄▄▄▄▄▀   ${f4}    ▀▄▄▄▄▄▄▄▄▀   ${f5}    ▀▄▄▄▄▄▄▄▄▀   ${f6}    ▀▄▄▄▄▄▄▄▄▀
${rst}
BOO
