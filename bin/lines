#!/usr/bin/env bash

f=3 b=4
for j in f b; do
  for i in {0..7}; do
    printf -v $j$i %b "\e[${!j}${i}m"
  done
done
bld=$'\e[1m'
rst=$'\e[0m'
inv=$'\e[7m'

# cat << HEXCODES
# ${rst}
# ${f1}█${f2}█${f3}█${f4}█${f5}█${f6}█
# ${f1}▓${f2}▓${f3}▓${f4}▓${f5}▓${f6}▓
# ${f1}░${f2}░${f3}░${f4}░${f5}░${f6}░
# ${rst}
# HEXCODES

# cat << HEXCODES
# ${rst}
# ${f1}█${f2}█${f3}█${f4}█${f5}█${f6}█
# ${f1}▓${f2}▓${f3}▓${f4}▓${f5}▓${f6}▓
# ${f1}░${f2}░${f3}░${f4}░${f5}░${f6}░
# ${f1}${bld}░${f2}${bld}░${f3}${bld}░${f4}${bld}░${f5}${bld}░${f6}${bld}░
# ${f1}${bld}▓${f2}${bld}▓${f3}${bld}▓${f4}${bld}▓${f5}${bld}▓${f6}${bld}▓
# ${f1}${bld}█${f2}${bld}█${f3}${bld}█${f4}${bld}█${f5}${bld}█${f6}${bld}█
# ${rst}
# HEXCODES

cat << HEXCODES
${rst}
${f1}█${f1}${bld}█${f2}█${f2}${bld}█${f3}█${f3}${bld}█${f4}█${f4}${bld}█${f5}█${f5}${bld}█${f6}█${f6}${bld}█
${f1}▓${f1}${bld}▓${f2}▓${f2}${bld}▓${f3}▓${f3}${bld}▓${f4}▓${f4}${bld}▓${f5}▓${f5}${bld}▓${f6}▓${f6}${bld}▓
${f1}░${f1}${bld}░${f2}░${f2}${bld}░${f3}░${f3}${bld}░${f4}░${f4}${bld}░${f5}░${f5}${bld}░${f6}░${f6}${bld}░
${rst}
HEXCODES

